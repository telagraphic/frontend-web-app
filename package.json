{
  "dependencies": {
    "gsap": "^3.13.0",
    "nunjucks": "^3.2.4",
    "vite": "^7.1.3"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "build:clean": "bun run clean && bun run build",
    "build:check": "bun run lint:js && bun run lint:css && bun run lint:html",
    "build:full": "bun run sass:build && NODE_ENV=production bun run build:pages && bun run build",
    "sass:watch": "sass --watch styles/styles.scss styles/styles.css --style=expanded --source-map",
    "sass:build": "sass styles/styles.scss styles/styles.css --style=compressed --no-source-map",
    "sass:check": "sass styles/styles.scss --style=expanded --no-source-map --quiet",
    "build:pages": "bun run scripts/generate-static-pages.js",
    "build:pages:dev": "NODE_ENV=development bun run scripts/generate-static-pages.js && npm run format:html && (test -f pages/index.html && mv pages/index.html ./index.html || echo 'No pages/index.html to move')",
    "format:html": "prettier --write pages/*.html",
    "format:js": "prettier --write app/**/*.js",
    "format:css": "prettier --write styles/**/*.scss",
    "lint:js": "eslint app/**/*.js",
    "lint:js:fix": "eslint app/**/*.js --fix",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "lint:html": "prettier --check pages/*.html",
    "lint": "bun run lint:js && bun run lint:css && bun run lint:html",
    "netlify:dev": "netlify dev --dir=dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.0",
    "eslint": "^9.34.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "html-minifier-terser": "^7.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie <= 11",
    "maintained node versions"
  ]
}
